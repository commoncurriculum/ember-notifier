<form {{action "show" on="submit"}}>
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2">
    <div class="-mx-3 md:flex mb-6">
      <div class="md:w-2/3 px-3 mb-6 md:mb-0">
        <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2"
               for="notification-message">
          Message
        </label>
        {{input
          id="notification-message"
          class="appearance-none block w-full text-grey-darker border border-grey-lighter rounded py-3 px-4"
          type="text"
          value=message}}
      </div>
      <div class="md:w-1/3 px-3">
        <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2"
               for="notification-type">
          Type
        </label>
        <div class="relative">
          <select id="notification-type"
                  class="block w-full border border-grey-lighter text-grey-darker py-3 px-4 pr-8 rounded"
                  onchange={{action (mut type) value="target.value"}}>
            {{#each types as |typeChoice|}}
              <option value={{typeChoice}} selected={{eq type typeChoice}}>
                {{capitalize typeChoice}}
              </option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>
    <div class="-mx-3 md:flex mb-6">
      <div class="md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2"
               for="notification-position">
          Position
        </label>
        <div class="relative">
          <select id="notification-position"
                  class="block w-full border border-grey-lighter text-grey-darker py-3 px-4 pr-8 rounded"
                  onchange={{action "setPosition" value="target.value"}}>
            {{#each positions as |positionChoice|}}
              <option value={{positionChoice}} selected={{eq type positionChoice}}>
                {{capitalize positionChoice}}
              </option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="md:w-1/2 px-3">
        <label class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" for="notification-duration">
          Duration (ms)
        </label>
        {{input
          id="notification-duration"
          class="appearance-none block w-full text-grey-darker border border-grey-lighter rounded py-3 px-4"
          type="number"
          min="0"
          step="100"
          value=duration}}
        <p class="text-grey-dark text-xs italic">Disable auto clear with a value of 0.</p>
      </div>
    </div>
    <div class="flex mb-4">
      <button
        class="py-2 px-4 rounded bg-blue hover:bg-blue-dark text-white font-bold"
        type="button"
        {{action "show"}}>
        Show
      </button>
      <button
        class="p-2 ml-4 mr-2 border-2 rounded bg-white hover:bg-grey-lightest text-grey-darkest font-bold"
        type="button"
        {{action "clearAll"}}>
        Clear all
      </button>
    </div>
  </div>
</form>